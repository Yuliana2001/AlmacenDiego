@page
@model pruebaAlmacen.Pages.VentaModel
@{
}
<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Datos de la compra</h2>
        @if (Model.errorMessage.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

            </div>
        }
        else if (Model.successMessage.Length > 0)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

            </div>
        }
        <form method="post" enctype="multipart/form-data">

            <fieldset>
    <legend>Datos del comprador</legend>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Nombre</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="VentaDto.Cliente.FirstName">
            <span asp-validation-for="VentaDto.Cliente.FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Apellido</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="VentaDto.Cliente.LastName">
            <span asp-validation-for="VentaDto.Cliente.LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Dirección de residencia</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="VentaDto.Cliente.Address">
            <span asp-validation-for="VentaDto.Cliente.Address" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Número de teléfono</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="VentaDto.Cliente.PhoneNumber">
            <span asp-validation-for="VentaDto.Cliente.PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Email</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="VentaDto.Cliente.Email">
            <span asp-validation-for="VentaDto.Cliente.Email" class="text-danger"></span>
        </div>
    </div>
</fieldset>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Cantidad</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="VentaDto.Cantidad">
                    <span asp-validation-for="VentaDto.Cantidad" class="text-danger"></span>

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Productos</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="VentaDto.Products" multiple>
                        @foreach (var product in Model.Products)
                        {
                            <option value="@product.Id">@product.Name</option>
                        }
                    </select>
                    <span asp-validation-for="VentaDto.Products" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Total</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="VentaDto.Total">
                    <span asp-validation-for="VentaDto.Total" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Descripción</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="VentaDto.EstadoPago">

                    <span asp-validation-for="VentaDto.EstadoPago" class="text-danger"></span>

                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Metodo de pago</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="VentaDto.MetodoPago">
                    <span asp-validation-for="VentaDto.MetodoPago" class="text-danger"></span>

                </div>
            </div>





            <div class="row mb-3">
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-outline-primary" href="/Admin" role="button">Cancelar</a>
                </div>
            </div>

        </form>
    </div>

</div>